<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Image Source="dotnet_bot.png"
                   SemanticProperties.Description="the dot net waving hello!"
                   HeightRequest="64"/>
            <Label FontSize="12" FontAttributes="Bold" Text="notes" VerticalOptions="End"/>
            <Label FontSize="12" Text="v1.0" VerticalOptions="End"/>
        </HorizontalStackLayout>

        <Label Text="this app is written in XAML and C# with .NET MAUI"/>
        <Button Text="learn more..." Clicked="LeranMore_Clicked"/>
    </VerticalStackLayout>
</ContentPage>